.form-group
  = form.label key, defined?(form_label) ? form_label : nil, class: 'small font-weight-bold'
  - options.each do |hash|
    .custom-control.custom-radio
      = form.radio_button key, hash[:value], class: 'custom-control-input', required: required
      label.custom-control-label id="label_#{form.object.class.name.downcase}_#{key}_#{hash[:value]}" for="#{form.object.class.name.downcase}_#{key}_#{hash[:value]}"= hash[:label]
